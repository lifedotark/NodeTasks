{
  "name": "ntask-web",
  "version": "1.0.0",
  "description": "A web version for the task manager",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run server",
    "server": "http-server public -p 3001",
    "build": "npm run browserify && npm run uglify",
    "browserify": "browserify ./src/index.js -t [babelify --presets [es2015 stage-2]] -o ./public/js/app.min.js",
    "uglify": "uglify -s ~/public/js/app.min.js -o ~/public/js/app.min.js"
  },
  "author": "Vinicius Silva Ramos",
  "dependencies": {
    "babelify": "^7.3.0",
    "browser-request": "^0.3.3",
    "browserify": "^13.1.1",
    "http-server": "^0.9.0",
    "tiny-emitter": "^1.1.0",
    "uglify": "^0.1.5"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "grunt": "^1.0.1",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^2.0.0"
  }
}
